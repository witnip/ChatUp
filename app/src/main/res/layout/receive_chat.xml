<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/rlReceive"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_delete"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/rlReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivCorner"
        android:padding="5dp"
        android:background="@drawable/receive_shape">

        <TextView
            android:id="@+id/tvReceiveMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:padding="5dp"
            android:text="Hello"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivCorner"
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginTop="-10dp"
        android:background="@drawable/receive_corner" />

    <ImageView
        android:id="@+id/ivFeeling"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="-10dp"
        android:layout_toEndOf="@id/rlReceive"
        android:src="@drawable/ic_fb_love"
        android:visibility="gone" />


</RelativeLayout>