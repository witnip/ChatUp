<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/rlSent"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_delete"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/rlSent"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ivCorner"
        android:background="@drawable/sent_shape">

        <TextView
            android:id="@+id/tvSentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hello asxzMNXVmNZXkjhzx \n\n\n\n\n\ jhwqeahsdgadhgasd"
            android:textColor="@color/white"
            android:layout_below="@id/image"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivFeeling"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="-10dp"
        android:layout_toStartOf="@id/rlSent"
        android:src="@drawable/ic_fb_love"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivCorner"
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start"
        android:layout_marginTop="-5dp"
        android:background="@drawable/send_corner" />
</RelativeLayout>